{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "definitions": {},
    "properties": {
        "scope": {
            "description": "The scope and namespaces where amalthea will operate and create jupyter servers.",
            "properties": {
                "clusterWide": {
                    "type": "boolean"
                }
            },
            "if": {
                "properties": {
                    "clusterWide": {
                        "const": false
                    }
                }
            },
            "then": {
                "oneOf": [{
                        "properties": {
                            "clusterWide": {
                                "const": false
                            },
                            "namespaces": {
                                "type": "array",
                                "minItems": 1,
                                "items": [{
                                    "type": "string"
                                }],
                                "uniqueItems": true
                            }
                        },
                        "required": [
                            "clusterWide",
                            "namespaces"
                        ],
                        "additionalProperties": false
                    },
                    {
                        "properties": {
                            "clusterWide": {
                                "const": false
                            }
                        },
                        "required": [
                            "clusterWide"
                        ],
                        "additionalProperties": false
                    }
                ]
            },
            "else": {
                "properties": {
                    "clusterWide": {
                        "const": true
                    }
                },
                "required": [
                    "clusterWide"
                ],
                "additionalProperties": false
            },
            "type": "object"
        },
        "deployCrd": {
            "description": "Should the helm chart apply the k8s CRD.",
            "type": "boolean"
        },
        "networkPolicies": {
            "description": "Enable a network policy to limit ingress to the controller and one network policy per namespace within the amalthea scope to limit ingress and egress from/to the jupyter servers.",
            "type": "object",
            "properties": {
                "controller": {
                    "type": "object",
                    "properties": {
                        "denyAllIngress": {
                            "type": "boolean"
                        }
                    },
                    "required": ["denyAllIngress"],
                    "additionalProperties": false
                },
                "jupyterServers": {
                    "type": "object",
                    "properties": {
                        "ingress": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                }
                            },
                            "if": {
                                "properties": {
                                    "enabled": {
                                        "const": true
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "enabled": {
                                        "const": true
                                    },
                                    "allowIngressOnlyFrom": {
                                        "type": "object",
                                        "properties": {
                                            "namespaceSelectorLabels": {
                                                "type": "object",
                                                "additionalProperties": true,
                                                "patternProperties": {
                                                    ".*": {
                                                        "type": "string"
                                                    }
                                                },
                                                "minProperties": 1
                                            },
                                            "podSelectorLabels": {
                                                "type": "object",
                                                "additionalProperties": true,
                                                "patternProperties": {
                                                    ".*": {
                                                        "type": "string"
                                                    }
                                                },
                                                "minProperties": 1
                                            }
                                        }
                                    }
                                },
                                "required": ["enabled", "allowIngressOnlyFrom"],
                                "additionalProperties": false
                            },
                            "else": {
                                "properties": {
                                    "enabled": {
                                        "const": false
                                    }
                                },
                                "required": ["enabled"],
                                "additionalProperties": false
                            }
                        },
                        "egress": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                }
                            },
                            "required": ["enabled"],
                            "additionalProperties": false
                        }
                    },
                    "required": ["ingress", "egress"],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "controller", "jupyterServers"
            ]
        },
        "rescheduleOnNodeFailure": {
            "description": "Experimental feature - reschedule jupyterServers on different nodes if a node fails.",
            "type": "boolean"
        },
        "kopfOperatorSettings": {
            "description": "Settings to be passed to kopf.",
            "type": "string"
        },
        "rbac": {
            "description": "If the operator should be able to create child resources other than [statefulset, persistentvolumeclaims, services, ingresses, secrets, configmaps] which are necessary for Amalthea to work, add the corresponding API groups and resources here.",
            "type": "object",
            "properties": {
                "extraChildResources": {
                    "type": "array",
                    "items": [{
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "group": {
                                "type": "string"
                            }
                        }
                    }]
                }
            },
            "additionalProperties": false,
            "required": [
                "extraChildResources"
            ]
        },
        "image": {
            "description": "The image used for the operator.",
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "repository",
                "pullPolicy",
                "tag"
            ]
        },
        "imagePullSecrets": {
            "type": "array",
            "items": [{
                "type": "string"
            }]
        },
        "nameOverride": {
            "type": "string"
        },
        "fullnameOverride": {
            "type": "string"
        },
        "serviceAccount": {
            "type": "object",
            "description": "Specifies whether a service account should be created",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "create"
            ],
            "additionalProperties": false
        },
        "podAnnotations": {
            "type": "object"
        },
        "podSecurityContext": {
            "type": "object"
        },
        "securityContext": {
            "type": "object"
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "cpu": {
                            "type": [
                                "number",
                                "string"
                            ]
                        }
                    },
                    "required": [
                        "memory",
                        "cpu"
                    ],
                    "additionalProperties": false
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "cpu": {
                            "type": [
                                "number",
                                "string"
                            ]
                        }
                    },
                    "required": [
                        "memory",
                        "cpu"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "limits",
                "requests"
            ]
        },
        "nodeSelector": {
            "type": "object"
        },
        "tolerations": {
            "type": "array",
            "items": [{
                "type": "string"
            }]
        },
        "affinity": {
            "type": "object"
        },
        "crdApiGroup": {},
        "crdApiVersion": {},
        "crdNames": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string"
                },
                "plural": {
                    "type": "string"
                },
                "singular": {
                    "type": "string"
                },
                "shortNames": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }],
                    "minItems": 1,
                    "uniqueItems": true
                }
            },
            "required": [
                "kind", "plural", "singular", "shortNames"
            ],
            "additionalProperties": false
        },
        "global": {
            "type": "object",
            "default": {},
            "additionalProperties": true
        }
    },
    "required": [
        "scope",
        "deployCrd",
        "networkPolicies",
        "rescheduleOnNodeFailure",
        "kopfOperatorSettings",
        "rbac",
        "image",
        "nameOverride",
        "fullnameOverride",
        "serviceAccount",
        "podAnnotations",
        "podSecurityContext",
        "securityContext",
        "resources",
        "nodeSelector",
        "tolerations",
        "affinity",
        "crdApiGroup",
        "crdApiVersion",
        "crdNames"
    ],
    "title": "Values",
    "type": "object",
    "additionalProperties": false
}
