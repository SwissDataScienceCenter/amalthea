{
	"name": "Amalthea",
	"image": "mcr.microsoft.com/devcontainers/go:2-1.25-trixie",
	"build": {
		"args": {
			"DEV_BUILD": true
		}
	},
	"containerUser": "root",
	"postCreateCommand": "make kind_cluster && echo alias k=kubectl >> ~/.bashrc && go mod download && make kustomize controller-gen operator-sdk envtest && pip install chartpress && git config --global --add safe.directory /${containerWorkspaceFolder}",
	"features": {
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {
			"jqVersion": "latest",
			"yqVersion": "latest"
		},
		"ghcr.io/devcontainers-extra/features/curl-apt-get:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": false
		},
		"ghcr.io/devcontainers-extra/features/kind:1": {},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"minikube": "none"
		},
		"ghcr.io/dhoeric/features/k9s:1": {
			"version": "0.50.18"
		}
	},
	"containerEnv": {"LOCALBIN": "/${containerWorkspaceFolder}/bin_devcontainer"}
}
